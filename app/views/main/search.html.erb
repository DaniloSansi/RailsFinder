<%= form_tag( {:action => 'search' }, :method => "get", id: "search-form") do %>
  <!-- Masthead-->

  <header class="masthead" style="height: 100%">

    <div class="container d-flex ">
      <div class="mx-auto text-center" style="margin-top: 220px">
        <h1 class="mx-auto my-0 text-uppercase">Rails finder</h1>
        <h2 class="text-white-50 mx-auto mt-2 mb-5">Input word and search it in files.</h2>

        <div class="row">
          <div class="col-md-10 col-lg-8 mx-auto text-center">

            <label class="text-white-50" for="exampleFormControlTextarea1">Path</label>
            <%if @folderExist==false %>
                <%= text_field_tag :path, params[:path], placeholder: "Enter Path",:class =>"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0 is-invalid"  %>
                <span class="error text-danger">Folder not found. Please input a valid folder path </span>
              <% else %>
                <%= text_field_tag :path, params[:path], placeholder: "Enter Path",:class =>"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0"  %>
            <%end %>
          </div>
        </div>
        <div class="row mt-4">

          <div class="col-md-10 col-lg-8 mx-auto text-center">
            <label class="text-white-50" for="exampleFormControlTextarea1">Word</label>
            <%= text_field_tag :word, params[:word], placeholder: "Enter word",:class =>"form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0"  %>
          </div>
        </div>


        <div class="row mt-4">
          <div class="col-md-10 col-lg-8 mx-auto text-center">
            <%= submit_tag "Search now" ,:class => "btn btn-primary js-scroll-trigger mt-4"%>
          </div>
        </div>


        <%if @folderExist==true %>
          <div class="row mt-4">
            <div class="col-md-10 col-lg-8 mx-auto text-center">
              <%if @listFiles.blank? %>
                <%if params[:word] =="" %>
                  <h2 class="text-white-50 mx-auto mt-2 mb-5"> Please input a word .</h2>
                <% else %>
                  <h2 class="text-white-50 mx-auto mt-2 mb-5">No files with the word <%= params[:word] -%> .</h2>
                <%end%>
              <% else %>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">Found <%= @countFiles -%> <%= @countFiles ==1 ?"file":"files"-%>  with the word ( <%= params[:word] -%> )</h2>

                <ul id=“files" style="padding-left: 0px">
                  <% @listFiles.each do |item| %>
                    <li >
                      <div class="form-group mt-5">
                        <label class="text-white-50" for="exampleFormControlTextarea1"><%=  item[:filePath]-%>/<%=  item[:fileName]-%></label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"> <%=  item[:fileContent] -%></textarea>
                      </div>
                    </li>
                  <%end%>
                </ul>
              <% end %>
            </div>
          </div>
        <%end %>

      </div>
    </div>


  </header>

<% end %>


